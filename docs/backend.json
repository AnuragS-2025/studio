
{
    "entities": {
        "UserProfile": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "title": "UserProfile",
            "type": "object",
            "description": "Represents a user profile in the WealthWise AI application.",
            "properties": {
                "displayName": {
                    "type": "string",
                    "description": "The display name of the user."
                },
                "email": {
                    "type": "string",
                    "description": "The email address of the user.",
                    "format": "email"
                }
            },
            "required": ["displayName", "email"]
        },
        "Transaction": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "title": "Transaction",
            "type": "object",
            "description": "Represents a single financial transaction.",
            "properties": {
                "date": {
                    "type": "string",
                    "description": "The date of the transaction in YYYY-MM-DD format.",
                    "format": "date"
                },
                "description": {
                    "type": "string",
                    "description": "A description of the transaction."
                },
                "amount": {
                    "type": "number",
                    "description": "The amount of the transaction."
                },
                "type": {
                    "type": "string",
                    "enum": ["income", "expense"],
                    "description": "The type of transaction."
                },
                "category": {
                    "type": "string",
                    "description": "The category of the transaction."
                }
            },
            "required": ["date", "description", "amount", "type", "category"]
        },
        "Investment": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "title": "Investment",
            "type": "object",
            "description": "Represents an individual asset within an investment portfolio.",
            "properties": {
                "name": { "type": "string" },
                "symbol": { "type": "string" },
                "quantity": { "type": "number" },
                "price": { "type": "number" },
                "value": { "type": "number" },
                "type": { "type": "string", "enum": ["stock", "bond", "crypto"] }
            },
            "required": ["name", "symbol", "quantity", "price", "value", "type"]
        },
        "Budget": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "title": "Budget",
            "type": "object",
            "description": "Represents a budget for a user.",
            "properties": {
                "category": { "type": "string" },
                "limit": { "type": "number" },
                "spent": { "type": "number" }
            },
            "required": ["category", "limit", "spent"]
        },
        "FinancialGoal": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "title": "FinancialGoal",
            "type": "object",
            "description": "Represents a financial goal set by a user.",
            "properties": {
                "goalName": { "type": "string" },
                "targetAmount": { "type": "number" },
                "targetDate": { "type": "string", "format": "date-time" },
                "currentSavedAmount": { "type": "number" }
            },
            "required": ["goalName", "targetAmount", "targetDate"]
        }
    },
    "auth": {
        "providers": ["anonymous"]
    },
    "firestore": {
        "collections": [
            {
                "path": "/users/{userId}",
                "schema": { "$ref": "#/entities/UserProfile" },
                "description": "Stores user profile information."
            },
            {
                "path": "/users/{userId}/transactions/{transactionId}",
                "schema": { "$ref": "#/entities/Transaction" },
                "description": "Stores all financial transactions for a user."
            },
            {
                "path": "/users/{userId}/investments/{investmentId}",
                "schema": { "$ref": "#/entities/Investment" },
                "description": "Stores all investments for a user."
            },
            {
                "path": "/users/{userId}/budgets/{budgetId}",
                "schema": { "$ref": "#/entities/Budget" },
                "description": "Stores all budgets for a user."
            },
            {
                "path": "/users/{userId}/financialGoals/{goalId}",
                "schema": { "$ref": "#/entities/FinancialGoal" },
                "description": "Stores all financial goals for a user."
            }
        ]
    }
}
